<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03acbe"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.example.akarshan.drivelert.ui.camera.CameraSourcePreview
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">â€¨
            <com.example.akarshan.drivelert.ui.camera.GraphicOverlay
                android:id="@+id/faceOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.example.akarshan.drivelert.ui.camera.CameraSourcePreview>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/rounded_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.cuboid.cuboidcirclebutton.CuboidButton
            android:id="@+id/button_end"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="END"
            android:textColor="#0097A7"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cub_border_color="#0097A7"
            app:cub_color="#000" />

        <com.cuboid.cuboidcirclebutton.CuboidButton
            android:id="@+id/button_no_preview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/no_preview"
            android:textColor="#ff9966"
            android:textSize="10sp"
            android:textStyle="bold"
            app:cub_border_color="#ff9966"
            app:cub_color="#000" />

        <com.cuboid.cuboidcirclebutton.CuboidButton
            android:id="@+id/button_status"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            app:cub_border_color="#FFE761"
            app:cub_color="#00FA9A" />

    </RelativeLayout>

</RelativeLayout>


